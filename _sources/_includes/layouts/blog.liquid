---
layout: layouts/base
---

<section class="post">
  <header>
    <h1>{{ title }}</h1>
    <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
  </header>

  <div class="description_of_post">
    <p>{{ description }}</p>
  </div>

  <article class="content">
    <div class="table_of_content">
      <h2>おしながき</h2>
      {{ content | toc }}
    </div>
    {{ content }}
  </article>
</section>
